<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vitaltechlabs.findhostels.HostelsActivity"
    tools:showIn="@layout/activity_hostels">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/hostelList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/noData"
        android:layout_toRightOf="@+id/noData"
        android:layout_toEndOf="@+id/noData" />

    <TextView
        android:id="@+id/noData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Hostels Available"
        android:visibility="gone"
        />
</android.support.constraint.ConstraintLayout>
