<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">

    <EditText
        android:id="@+id/sharingprice3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:hint="Rs"
        android:layout_above="@+id/sharing4"
        android:layout_alignStart="@+id/sharingprice2"
        android:layout_alignEnd="@+id/sharingprice2"
        android:layout_alignLeft="@+id/sharingprice2"
        android:layout_alignRight="@+id/sharingprice2" />

    <EditText
        android:id="@+id/sharingprice2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:hint="Rs"
        android:layout_above="@+id/sharing3"
        android:layout_alignStart="@+id/sharingprice1"
        android:layout_alignEnd="@+id/sharingprice1"
        android:layout_alignLeft="@+id/sharingprice1"
        android:layout_alignRight="@+id/sharingprice1" />

    <EditText
        android:id="@+id/sharingprice1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:hint="Rs"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="76dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="76dp" />

    <TextView
        android:id="@+id/sharing1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="1 Sharing"
        android:textAlignment="gravity"
        android:layout_marginStart="34dp"
        android:layout_alignBottom="@+id/sharingprice1"
        android:layout_marginLeft="34dp" />

    <EditText
        android:id="@+id/sharingprice5"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:hint="Rs"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/sharingprice4"
        android:layout_alignEnd="@+id/sharingprice4"
        android:layout_alignLeft="@+id/sharingprice4"
        android:layout_alignRight="@+id/sharingprice4" />

    <TextView
        android:text="3 Sharing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sharing3"
        android:textAlignment="gravity"
        android:layout_marginStart="34dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/sharing2"
        android:layout_marginLeft="34dp" />

    <TextView
        android:text="2 Sharing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sharing2"
        android:textAlignment="gravity"
        android:layout_marginStart="34dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/sharing1"
        android:layout_marginLeft="34dp" />
            <TextView
                android:text="4 Sharing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sharing4"
                android:textAlignment="gravity"
                android:layout_marginStart="34dp"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/sharing3"
                android:layout_marginLeft="34dp" />

    <TextView
        android:text="5 Sharing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sharing5"
        android:textAlignment="gravity"
        android:layout_marginStart="34dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/sharing4"
        android:layout_marginLeft="34dp" />

            <EditText
                android:id="@+id/sharingprice4"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:hint="Rs"
                android:layout_above="@+id/sharing5"
                android:layout_alignStart="@+id/sharingprice3"
                android:layout_alignEnd="@+id/sharingprice3"
                android:layout_alignLeft="@+id/sharingprice3"
                android:layout_alignRight="@+id/sharingprice3" />

        </RelativeLayout>

</ScrollView>
</RelativeLayout>